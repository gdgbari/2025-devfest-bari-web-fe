---
// Welcome to Astro! Everything between these triple-dash code fences

import Footer from "../components/Common/Footer.astro";
import Navbar from "../components/Common/Navbar.astro";
import PageHead from "../components/Common/PageHead.astro";
import "../style/base.css";
---

<!-- Below is your "component template." It's just HTML, but with
     some magic sprinkled in to help you build great templates. -->
<html lang="it" class="scroll-smooth flex flex-col min-h-screen">
  <PageHead title="404 - Not found"/>

  <body class="flex flex-col flex-1">
    <Navbar />

    <main
      class="flex flex-col justify-center items-center max-w-6xl m-auto px-4 pb-12 flex-1 text-white"
    >
      <h1 class="font-bold text-6xl text-center">Ops! Page not found</h1>
      <div class="my-5"></div>
      <a class="btn-content" href="/"> Return to home</a>
    </main>
    <Footer />
  </body>
</html>
