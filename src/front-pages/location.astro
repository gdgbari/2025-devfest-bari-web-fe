---
import BaseLayout from "../components/Common/BaseLayout.astro";
import { getLangFromUrl, useTranslations } from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

---

<BaseLayout pageTitle="Location" pageDescription={t("location.description")}>
  <div class="grid md:grid-cols-2 grid-flow-row gap-4 text-white">
    <div class="flex flex-col justify-start">
      <h2 class="font-medium text-4xl">{t("location.howToGet")}</h2>
    </div>
    <div>
      <p>{t("location.description")}</p>
    </div>
    <div class="flex flex-col justify-start">
      <h2 class="font-medium text-4xl">{t("location.byTrain")}</h2>
    </div>
    <div>
      <p>{t("location.byTrainDesc")}</p>
    </div>
    <div class="flex flex-col justify-start">
      <h2 class="font-medium text-4xl">{t("location.byCar")}</h2>
    </div>
    <div>
      <p>{t("location.byCarDesc")}</p>
    </div>
    <div class="flex flex-col justify-start">
      <h2 class="font-medium text-4xl">{t("location.byPlane")}</h2>
    </div>
    <div>
      <p>{t("location.byPlaneDesc")}</p>
    </div>
  </div>
</BaseLayout>
